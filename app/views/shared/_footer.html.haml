-# .container
%footer.d-flex.justify-content-between.align-items-center.py-3.my-4.border-top
  .container.d-flex.align-items-center.gap-3
    %a.d-flex.align-items-center.justify-content-center.link-dark.text-decoration-none.mx-auto{:href => "#"}
      %img{:alt => "Logo", :height => "30", :src => "assets/pictures/logo.svg", :width => "30"}/
    %div.d-flex.gap-1.align-items-center
      %p.mb-0.text-muted
        = "Методики разработки современных WEB-приложений / "
      %p.mb-0.text-muted.text-start
        = "Ерошин И.П. "
    %ul.nav.justify-content-end.flex-grow-1
      %li.nav-item
        = link_to 'About', main_about_path, class: 'nav-link text-muted link-light'
      %li.nav-item
        = link_to 'Contacts', main_contacts_path, class: 'nav-link text-muted link-light'
